  
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
  <% end %>
  
  <% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <p class="navbar fixed-top">
  <% if user_signed_in? %>

    <%= link_to 'Edit Account', edit_user_registration_path, :class => 'navbar-link' %> 
    <% if (current_user.profile == nil) %>
      <%= link_to 'Add Profile', new_profile_path, :class => 'navbar-link' %> 
    <% else %>
      <%= link_to 'Edit Profile', edit_profile_path(id: current_user.profile.id), :class => 'navbar-link' %>
    <% end %>
    <%= link_to 'Location', locations_new_path, :class => 'navbar-link' %> 
    <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
  <% end %>
  </p>

