<br>
<h2 class="offset-md-5">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, class: "form-horizontal"), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :email, class: "offset-md-3" %>
    <%= f.email_field :email, autofocus: true, class: "col-md-6 offset-md-3 form-control" %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: "offset-md-3 control-label" %> <i>(leave blank if you don't want to change it)</i>
     <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: "col-md-6 offset-md-3 form-control" %>
   
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "offset-md-3" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-md-6 offset-md-3 form-control" %>
  </div> <br>

  <div class="field">
    <%= f.label :current_password, class: "offset-md-3 control-label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "col-md-6 offset-md-3 form-control" %>
  </div> <br>

  <div class="actions">
    <%= f.submit "Update", class: "col-md-4 offset-md-4 control-label btns" %>
  </div>
<% end %>
<br>
<h4 class="offset-md-4">Cancel my account</h4>

<p class="offset-md-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "col-md-4 offset-md-4 control-label btns-cancel" %></p>

<%= link_to "Back", :back, class: "offset-md-4" %>
