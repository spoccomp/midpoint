<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), class: "col-md-6 offset-md-3", html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "offset-md-3" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "col-md-6 offset-md-3" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: "col-md-4 offset-md-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
