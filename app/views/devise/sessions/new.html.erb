<h2 class="col-md-6 offset-md-3">Log in</h2><hr>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
  <div class="field">
    <%= f.label :email, class: "col-md-6 offset-md-3 control-label" %><br />
    <%= f.email_field :email, autofocus: true, class: "col-md-6 offset-md-3 form-control"  %>
  </div>

  <div class="field">
    <%= f.label :password, class: "col-md-6 offset-md-3 control-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "col-md-6 offset-md-3 form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "col-md-1 offset-md-3" %>
      <%= f.label :remember_me, class: "col-md-6 offset-md-3 control-label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "col-md-6 offset-md-3 control-label btns" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
